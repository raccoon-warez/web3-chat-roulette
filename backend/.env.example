# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database Configuration - Optimized
DATABASE_URL=postgresql://user:password@localhost:5432/web3chat

# Database Pool Settings - Performance Optimized
DB_POOL_MAX=50
DB_POOL_MIN=5
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=1000
DB_QUERY_TIMEOUT=5000
DB_STATEMENT_TIMEOUT=10000

# Redis Configuration - Enhanced
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-here-make-it-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-make-it-different-and-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
COOKIE_DOMAIN=localhost
WS_REQUIRE_AUTH=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebRTC Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password

# Performance Monitoring
ENABLE_QUERY_LOGGING=true
SLOW_QUERY_THRESHOLD=50
MAX_RECONNECT_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Feature Flags
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DATABASE_OPTIMIZATION=true
ENABLE_CACHE_OPTIMIZATION=true
ENABLE_AUTOMATIC_INDEXING=true

# Cleanup and Maintenance
CLEANUP_INTERVAL_MINUTES=5
OPTIMIZATION_INTERVAL_MINUTES=15
MONITORING_INTERVAL_MINUTES=1
